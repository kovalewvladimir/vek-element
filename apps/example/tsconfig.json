{
  "compilerOptions": {
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",

    "noEmit": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "vite/client", "element-plus/global"]
  },

  "include": ["src/**/*.ts", "src/**/*.vue", "vite.config.*", "uno.config.*"],
  "exclude": ["src/**/__tests__/*"]
}
